<p id="notice"><%= notice %></p>

<h1>Listing Predios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @predios.each do |predio| %>
      <tr>
        <td><%= predio.name %></td>
        <td><%= predio.address %></td>
        <td><%= predio.details %></td>
        <td><%= link_to 'Show', predio %></td>
        <td><%= link_to 'Edit', edit_predio_path(predio) %></td>
        <td><%= link_to 'Destroy', predio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

