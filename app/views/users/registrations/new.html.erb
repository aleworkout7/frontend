<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<% if resource.errors[:password_confirmation].present? %>
	<div class="alert alert-dismissable alert-danger text-center">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		As senhas não correspondem
	</div>
<% end %>

<%= devise_error_messages! %>

<div class="container" style="margin-top:50px">
	<div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 lateral-clean">
		<div class="panel panel-default">

			<div class="panel-body">
				<p class="login-text">Cadastre-se para experimentar conexões e interações com a sua vizinhança.</p>
			</div>
			<br>
			<div class="form-group">
				<%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Insira o seu e-mail" %>
				<img src="https://s3.amazonaws.com/predios/mail.png" class="input-mail">
			</div>
			<div class="form-group">
				<%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Insira a sua senha" %>
			</div>
			<div class="form-group">
				<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confirmar sua senha" %>
			</div>
			<div class="row actions">
				<div class="col-md-12">
					<div>
						<%= f.submit "CADASTRE-SE", class:"btn btn-sm btn-primary btn-send" %>
						<img src="https://s3.amazonaws.com/predios/right.png" class="btn-right">
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

<% end  %>
