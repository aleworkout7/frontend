<div class="container">
	<h1>Municipios</h1>
	<hr>

	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @cities.each do |city| %>
			<tr>
				<td><%= city.name %></td>
				<td>
					<%= link_to 'Editar', edit_city_path(city), class: "btn btn-success btn-sm" %>
					<%= link_to 'Eliminar', city, method: :delete, class: "btn btn-primary btn-sm", data: { confirm: 'Tem certeza que deseja excluir?' } %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<br>

	<%= link_to 'Novo Municipio', new_city_path, role: 'button', class: 'navbar-fixed-bottom button button3 btn-block' %>
</div>
