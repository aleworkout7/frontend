<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <div class="container" style="margin-top:50px">
    <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">      
          <h3 class="panel-title"><strong>Cambiar su contraseña </strong></h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= f.label :password, "Nueva Contraseña" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimos)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: false, autocomplete: "off", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div>
          <div class="actions">
            <div class="row">
              <div class="col-md-6">
                <%= f.submit "Cambiar contraseña", class:"btn btn-sm btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end  %>


