<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="container" style="margin-top:50px">
    <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">      
          <h3 class="panel-title"><strong>Registrarse </strong></h3>
          <div style="float:right; font-size: 80%; position: relative; top:-10px">  
            <%#= link_to "Olvidó su contraseña?", new_password_path(resource_name) %><br />
          </div>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Ingrese email" %>
          </div>
          <div class="form-group">
            <%= f.label "Contraseña" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Ingrese contraseña" %>
          </div>
          <div class="form-group">
            <%= f.label "Confirmar Contraseña" %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Ingrese confirmación de contraseña" %>
          </div>
          <div class="row actions">
            <div class="col-md-6">
              <%= f.submit "Registrarse", class:"btn btn-sm btn-primary" %>
            </div>
            <div align="right" class="col-md-6">
              <%- if controller_name != 'sessions' %>
                <%= link_to "Cancelar, e iniciar sesión", new_session_path(resource_name) %><br />
              <% end -%>
            </div>
          </div> 
        </div>
      </div>
    </div>
  </div>

<% end  %>

