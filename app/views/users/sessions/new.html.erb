<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container" style="margin-top:25px">
    <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-default">
        <p style="font-size: 25px;line-height: 30px;font-weight: bold;">Realize seus sonhos agora.</p>
        <p style="font-weight: normal;margin-top: 20px;font-size: 20px;margin-bottom: 35px;line-height: 26px;">Compre e venda nos Prédios.</p>
        <div class="panel-body">
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class:"form-control black-border", placeholder:"Insira o seu e-mail" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class:"form-control black-border", placeholder:"Insira a sua senha"%>
          </div>
          <div class="actions">
            <%= f.submit "Avançar", class:"btn btn-sm btn-primary btn-black" %>
          </div>
          <div style="margin-top:10px" class="form-group">
            <div class="col-md-12 control">
              <div style="border-top: 1px solid#ddd; padding-top:15px;" >
                ¿No tienes una cuenta?
                <%= link_to "Regístrate Aquí", new_registration_path(resource_name) %><br />
                <%= link_to "Olvidó su contraseña?", new_password_path(resource_name) %><br />
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end  %>
