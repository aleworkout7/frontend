<div class="container">
	<div class="row">
		<div class="modal-header">
			<h3 class="modal-title text-center">Pedidos</h3>
		</div>

		<div class="modal-body" align="center">
			<div class="col-md-6">
				<%= link_to "Pedido feitos como cliente", to_shops_orders_path, class: "btn btn-success" %>
			</div>
			<% if user_signed_in? %>
					<div class="col-md-6">
						<%= link_to_if current_user.has_subscription?, "Pedidos recebidos como vendedor", from_clients_orders_path, class: "btn btn-success" %>
					</div>
			<% end %>
		</div>
	</div>
</div>
