<div class="row">
	<div class="modal-header">
		<h3 class="modal-title" id="small-modal-label">Pedido (#<%= @order.id %>)</h3>
	</div>

	<div class="modal-body">
		<div class="row">
			<div class="col-md-12">
				<h4>Detalhe:</h4>
				<table class='table table-hover'>
					<tr>
						<th>Tienda:</th>
						<td><%= @order.shop.name %></td>
					</tr>
					<tr>
						<th>Telefone do vendedor:</th>
						<td><%= @order.shop.user.phone %></td>
					</tr>
					<tr>
						<th>Valor do pedido:</th>
						<td><%= format_currency @order.total %></td>
					</tr>
					<tr>
						<th>Observações da compra:</th>
						<td><%= @order.observation %></td>
					</tr>
					<tr>
						<th>Status:</th>
						<td><%= @order.status.status %></td>
					</tr>

					<% if @order.status.status == OrderStatus::CANCELADO %>
						<tr>
							<th>Motivo do cancelamento:</th>
							<td><%= @order.status.observation %></td>
						</tr>
					<% end %>

					<tr>
						<th>Criado em:</th>
						<td><%= format_datetime @order.status.created_at %></td>
					</tr>
				</table>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<h4>Produtos:</h4>
				<table class='table table-hover'>
					<% @order.order_items.each do |item| %>
						<tr>
							<td><%= item.product.name %></td>
							<td><%= item.amount %> x </td>
							<td><%= format_currency item.value %></td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<h4>Localização do cliente:</h4>
				<table class='table table-hover'>
					<% address = @order.user.address %>
					<tr>
						<th>Prédio:</th>
						<td><%= address.predio.name %></td>
					</tr>
					<tr>
						<th>Bloco:</th>
						<td><%= address.block %></td>
					</tr>
					<tr>
						<th>Apartamento:</th>
						<td><%= address.number %></td>
					</tr>
					<tr>
						<th>Andar:</th>
						<td><%= address.floor %></td>
					</tr>
					<tr>
						<th>Complemento:</th>
						<td><%= address.complement %></td>
					</tr>
				</table>
			</div>
		</div>
	</div>

	<div class="modal-footer">
		<%= link_to 'Voltar', to_shops_orders_path, class: "btn btn-success" %>
	</div>
</div>
