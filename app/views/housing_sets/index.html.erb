<div class="container">
	<h1>Conjuntos</h1>
	<hr>

	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Bairro</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @housing_sets.each do |housing_set| %>
			<tr>
				<td><%= housing_set.name %></td>
				<td><%= housing_set.district.name %></td>
				<td>
					<%= link_to 'Editar', edit_housing_set_path(housing_set), class: "btn btn-success btn-sm" %>
					<%= link_to 'Eliminar', housing_set, method: :delete, class: "btn btn-primary btn-sm", data: { confirm: 'Tem certeza que deseja excluir?' } %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<br>

	<%= link_to 'Novo Conjunto', new_housing_set_path, role: 'button', class: 'navbar-fixed-bottom button button3 btn-block' %>
</div>
