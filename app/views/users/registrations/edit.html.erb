<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="container" style="margin-top:50px">
	<div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><strong>Editar cuenta </strong></h3>
				<div style="float:right; font-size: 80%; position: relative; top:-10px">
					<%#= link_to "Olvidó su contraseña?", new_password_path(resource_name) %><br />
				</div>
			</div>
			<div class="panel-body">
				<div class="form-group">
					<%= f.label "Nombre" %><br />
					<%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"Ingrese nombre" %>
				</div>
				<div class="form-group">
					<%= f.label "Email" %><br />
					<%= f.email_field :email, class:"form-control", placeholder:"Ingrese email" %>
				</div>
				<div class="form-group">
					<%= f.label "Telefono" %><br />
					<%= f.text_field :phone, class:"form-control phone", placeholder:"Ingrese telefono" %>
				</div>

				<%= fields_for :addresses, f.object.address do |ff| %>
					<hr>

					<div class="form-group">
						<%= ff.label "Predio" %><br />
						<%= ff.select :predio_id, Predio.all.collect { |p| [ p.name, p.id ] }, { prompt: "Elige un predio" }, { class: "form-control" } %>
					</div>
					<div class="form-group">
						<%= ff.label "Numero apartamento" %><br />
						<%= ff.text_field :number, class:"form-control", placeholder:"Ingrese numero apartamento" %>
					</div>
					<div class="form-group">
						<%= ff.label "Bloco" %><br />
						<%= ff.text_field :block, class:"form-control", placeholder:"Ingrese bloco" %>
					</div>
					<div class="form-group">
						<%= ff.label "Numero de piso" %><br />
						<%= ff.number_field :floor, class:"form-control", placeholder:"Ingrese numero piso" %>
					</div>
					<div class="form-group">
						<%= ff.label "Complement" %><br />
						<%= ff.text_field :complement, class:"form-control", placeholder:"Ingrese complement" %>
					</div>
				<% end %>

				<hr>

				<div class="form-group">
					<%= f.label "Contraseña" %>
					<% if @minimum_password_length %>
						<em>(<%= @minimum_password_length %> caracteres mínimos)</em>
					<% end %><br />
					<%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Ingrese contraseña" %>
				</div>
				<div class="form-group">
					<%= f.label "Confirmar Contraseña" %><br/>
					<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Ingrese confirmación de contraseña" %>
				</div>

				<hr>

				<div class="form-group">
					<%= f.label "Contraseña Actual *" %>
					<br/><small><i>(Necesitamos su contraseña actual para confirmar sus cambios)</i></small><br />
					<%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Ingrese contraseña actual", required: true %>
				</div>

				<hr>

				<div class="row actions">
					<div class="col-md-6">
						<%= f.submit "Editar cuenta", class:"btn btn-sm btn-primary" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<% end %>
