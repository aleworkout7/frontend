<h1>My Shops</h1>
  <div class="row">
    <% @shops.each do |shop| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://img.viajeabrasil.com/platos-tipicos-brasil.jpg" alt="imagen_tienda">
          <div class="caption">
            <h3><%= shop.name %></h3>
            <p>"<%= shop.greeting %>".</p>
            <h4><%= shop.number %></h4>
            <% if shop.whatsapp %>
              <ul>
                <li>Tengo Whatsapp</li>
              </ul>
            <% end %>
            <% if shop.phone %>
              <ul>
                <li>Puedes Llamarme</li>
              </ul>
            <% end %>
            <p>
            <%= link_to 'VITRINEAR', shop, role: 'button', class: 'btn btn-primary' %>
            <% if current_user.id == shop.user_id %>
              <%= link_to 'Editar', edit_shop_path(shop), role: 'button', class: 'btn btn-primary' %>
              <%= link_to 'Destruir', shop, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-primary' %>
            <% end %>  
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'Nueva Tienda', new_shop_path, role: 'button', class: 'btn btn-warning btn-block' %>