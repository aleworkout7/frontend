<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

  <div class="row">
    <% @products.each do |product| %>
      <% if product.id_shop == @shop.id %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= product.img %>" alt="imagen_producto">
          <div class="caption">
            <h3><%= product.name %></h3>
            <p>$<%= product.price %> (CLP)</p>
            <p>
            <%= link_to 'Show', product, role: 'button', class: 'btn btn-primary' %>
            <%-# link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-primary' -%>
            <%= link_to 'Agregar al carrito',root_path, role: 'button', class: 'btn btn-primary' %>
            <%= link_to 'Agregar a puede ser',root_path, role: 'button', class: 'btn btn-primary' %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

