<p id="notice"><%= notice %></p>

<h1>Listing Shops</h1>
  <div class="row">
    <% @shops.each do |shop| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= shop.img %> " alt="imagen_tienda">
          <div class="caption">
            <h3><%= shop.name %></h3>
            <p>"<%= shop.greeting %>".</p>
            <p>
            <%= link_to 'Show', shop, role: 'button', class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_shop_path(shop), role: 'button', class: 'btn btn-primary' %>
            <%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-primary' %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'New Shop', new_shop_path %>
